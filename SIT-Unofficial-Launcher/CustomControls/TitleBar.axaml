<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="30"
             x:Class="SIT_Unofficial_Launcher.CustomControls.TitleBar">
	
	<Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *, Auto, Auto">
		<Rectangle Grid.ColumnSpan="4" IsHitTestVisible="False" Fill="Black"/>
		<Image Source="/Assets/Stay-In-Tarkov-512.ico" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
		<TextBlock Text="SIT Unofficial Launcher" IsHitTestVisible="False" VerticalAlignment="Center" Grid.Column="2"/>
		<Button Content="_" Grid.Column="3" Click="MinimizeButtonClick" Classes="TitleBar"/>
		<Button Content="X" Grid.Column="4" Click="CloseButtonClick" Classes="TitleBar"/>
	</Grid>
</UserControl>
